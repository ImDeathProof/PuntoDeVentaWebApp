@model PuntoDeVentaWeb.Models.Sale

@{
    ViewData["Title"] = "Delete Sale";
}


<div class="card">
    <div class="card-header">
        <h1>@ViewData["Title"]</h1>
        <div class="alert alert-danger">
            <h4>Are you sure you want to delete this sale?</h4>
        </div>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">Customer Name:</dt>
            <dd class="col-sm-10">@Model.Client.Name</dd>
            <dt class="col-sm-2">Total Amount:</dt>
            <dd class="col-sm-10">@Model.Total.ToString("C")</dd>
            <dt class="col-sm-2">Date:</dt>
            <dd class="col-sm-10">@Model.Date.ToString("g")</dd>
            <dt class="col-sm-2">Status:</dt>
            <dd class="col-sm-10">@Model.Status.Name</dd>
            <dt class="col-sm-2">Payment Method:</dt>
            <dd class="col-sm-10">@Model.PaymentMethod.Name</dd>
            <dt class="col-sm-2">Seller:</dt>
            <dd class="col-sm-10">@Model.User.Name</dd>
        </dl>
    </div>
    <div class="card-footer">
        <form asp-action="Delete">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a href="@Url.Action("Index", "Sale")" class="btn btn-secondary">Back</a>
        </form>
    </div>
</div>