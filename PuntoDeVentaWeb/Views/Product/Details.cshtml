@model PuntoDeVentaWeb.Models.Product

@{
    ViewData["Title"] = "Product Details";
}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card border-0 shadow">
                <div class="card-header bg-white py-3 border-bottom">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-box text-primary me-2"></i>
                            @ViewData["Title"]
                        </h5>
                        <span class="badge bg-secondary">SKU: @Model.SKU</span>
                    </div>
                </div>
                
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-4 text-center">
                            <div class="bg-light p-4 rounded-3 mb-3 text-center">
                                @if(!string.IsNullOrEmpty(Model.Image)){
                                    <img class="img-fluid" src="@Model.Image" alt="">
                                }else{
                                    <i class="bi bi-image text-muted" style="font-size: 4rem;"></i>
                                }
                            </div>
                        </div>
                        
                        <div class="col-md-8">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label">Name:</label>
                                    <Input asp-for="Name" class="form-control bg-light" disabled readonly></Input>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Price:</label>
                                    <div class="input-group">
                                        <div class="input-group-text" id="btnGroupAddon">$</div>
                                        <Input asp-for="Price" class="form-control bg-light text-success fw-bold"></Input>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <label class="form-label">Description:</label>
                                    <Input asp-for="Description" class="form-control bg-light" style="min-height: 80px" disabled readonly></Input>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Stock:</label>
                                    <Input asp-for="Stock" class="form-control bg-light" disabled readonly></Input>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Category:</label>
                                    <Input asp-for="Category.Name" class="form-control bg-light" disabled readonly></Input>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Brand:</label>
                                    <Input asp-for="Brand.Name" class="form-control bg-light" disabled readonly></Input>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between border-top pt-3">
                        <a class="btn btn-link text-decoration-none" asp-action="Index">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <div>
                            <a class="btn btn-outline-danger me-2" asp-action="Delete" asp-route-id="@Model?.Id">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
